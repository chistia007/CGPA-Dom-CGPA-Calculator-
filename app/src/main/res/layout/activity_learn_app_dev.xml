<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearnAppDev"
    android:background="@drawable/cgpadom_floating_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/abeezee"
        android:lineSpacingExtra="5dp"
        android:text="Email me for all resources regarding app development : chisthia.khan@g.bracu.ac.bd "
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#fff"
        android:textSize="16sp"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btnGithub"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:background="#fff"
        android:drawableEnd="@drawable/icons_github"
        android:text="My github"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/btnLinkedin"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:background="#fff"
        android:drawableEnd="@drawable/icons_linkedin"
        android:text="My Linkedin"
        app:layout_constraintEnd_toEndOf="@+id/btnGithub"
        app:layout_constraintStart_toStartOf="@+id/btnGithub"
        app:layout_constraintTop_toBottomOf="@+id/btnGithub" />

    <Button
        android:id="@+id/btnTwitter"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:background="#fff"
        android:drawableEnd="@drawable/icons_twitter"
        android:text="My twitter"
        app:layout_constraintEnd_toEndOf="@+id/btnLinkedin"
        app:layout_constraintStart_toStartOf="@+id/btnLinkedin"
        app:layout_constraintTop_toBottomOf="@+id/btnLinkedin" />
</androidx.constraintlayout.widget.ConstraintLayout>